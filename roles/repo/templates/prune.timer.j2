# {{ ansible_managed }}
[Unit]
Description=Timer for pruning old restic backups of repo {{ restic_repo }}

[Timer]
OnCalendar={{ restic_prune.schedule.oncalendar }}
{% if restic_prune.schedule.delay is defined %}
RandomizedDelaySec={{ restic_prune.schedule.delay }}
{% endif %}
Persistent=true

[Install]
WantedBy=timers.target
