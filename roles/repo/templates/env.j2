# {{ ansible_managed }}
#
# for the hostname, configure it in .ssh/config
#
export RESTIC_CACHE_DIR={{ cachedir|default(restic_default_cachedir) }}
export RESTIC_REPOSITORY={{ url|mandatory }}
export RESTIC_PASSWORD_FILE=/etc/restic.repos.d/{{ repo }}/password
{% if restic_nice is defined -%}
export RESTIC_NICE={{ restic_nice }}
{% endif -%}
