# {{ ansible_managed }}
#
# for the hostname, configure it in .ssh/config
#
export RESTIC_CACHE_DIR={{ cachedir|default(restic_default_cachedir) }}
export RESTIC_REPOSITORY={{ restic_repo_url }}
{% if restic_is_very_old|default(true)|bool %}
export RESTIC_PASSWORD_FILE=/etc/restic.repos.d/{{ restic_repo }}/password
{% endif %}
{% if restic_retention_time is defined %}
export RESTIC_RETENTION_TIME={{ restic_retention_time }}
{% endif %}
